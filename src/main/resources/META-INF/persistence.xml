<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
 
   <persistence-unit name="my-pu">
     <description>My Persistence Unit</description>
     <provider>com.objectdb.jpa.Provider</provider>
     <mapping-file>META-INF/mappingFile.xml</mapping-file>
     <jar-file>packedEntity.jar</jar-file>
     <class>co.refiere.models.RefiereUser</class>
     <class>co.refiere.models.RefierePeriodicity</class>
     <class>co.refiere.models.RefierePlan</class>
     <class>co.refiere.models.RefiereUsercompany</class>
     <properties>
       <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/refiere"/>
       <property name="javax.persistence.jdbc.user" value="refiere"/>
       <property name="javax.persistence.jdbc.password" value="refiere"/>
     </properties>
   </persistence-unit>
 
</persistence>